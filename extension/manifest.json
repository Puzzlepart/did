{
  "manifest_version": 3,
  "name": "did - Timesheet Sidebar",
  "version": "1.0.0",
  "description": "Access your did timesheet from the Edge sidebar while working in Office 365 and other web apps.",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "permissions": [
    "sidePanel"
  ],
  "action": {
    "default_title": "Open did Timesheet",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://did.puzzlepart.com/*",
    "https://didapp-dev.azurewebsites.net/*",
    "https://didapp-staging.azurewebsites.net/*"
  ]
}
