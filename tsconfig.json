{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2018",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2018", "esnext.asynciterable", "DOM"],
    "baseUrl": "./",
    "paths": {
      "utils/*": ["server/utils/*"],
      "services": ["server/services"],
      "services/*": ["server/services/*"]
    },
    "typeRoots": ["./node_modules/@types", "./server"],
    "types": [
      "express",
      "node",
      "express-bearer-token",
      "express-session",
      "passport-azure-ad",
      "debug",
      "get-value",
      "passport",
      "@custom-types"
    ],
    "outDir": "dist"
  },
  "include": ["./server/**/*.ts"],
  "exclude": ["./node_modules"]
}
