{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2018",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2018", "esnext.asynciterable", "DOM"],
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types", "./server"],
    "types": [
      "express",
      "node",
      "mocha",
      "express-bearer-token",
      "express-session",
      "passport-azure-ad",
      "debug",
      "get-value",
      "passport",
      "@custom-types"
    ],
    "outDir": "server-dist"
  },
  "include": ["server/**/*.ts"],
  "exclude": ["node_modules"]
}
