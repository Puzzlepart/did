{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "module": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "noImplicitAny": false,
    "moduleResolution": "NodeNext",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["ES2022", "esnext.asynciterable", "DOM"],
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types", "./server"],
    "types": [
      "express",
      "node",
      "express-session",
      "passport-azure-ad",
      "debug",
      "get-value",
      "passport"
    ],
    "outDir": "dist"
  },
  "include": ["./server/**/*.ts", "shared/utils/generateId.ts"],
  "exclude": ["./node_modules", "**/*.test.ts"],
}
