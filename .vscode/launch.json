{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "server.js",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\bin\\index.js",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "NODE_ENV": "development",
                "DEBUG": "services*"
            },
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}